<% blazer_title @dashboard.name %>
<% content_for :nav do %>
  <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
    <li class="nav-item">
      <%= link_to "Edit", blazer.edit_dashboard_path(@dashboard, params: variable_params(@dashboard)), class: "nav-link" %>
    </li>
  </ul>
<% end %>

<% if @data_sources.any? { |ds| ds.cache_mode != "off" } %>
  <p class="text-muted float-end mb-3">
    Some queries may be cached
    <%= link_to "Refresh", refresh_dashboard_path(@dashboard, params: variable_params(@dashboard)), method: :post, class: "ms-2" %>
  </p>
<% end %>

<% if @bind_vars.any? %>
  <%= render partial: "blazer/variables", locals: {action: dashboard_path(@dashboard)} %>
<% else %>
  <div class="pb-3"></div>
<% end %>

<% @queries.each_with_index do |query, i| %>
  <div class="chart-container mb-4">
    <h4><%= link_to query.friendly_name, query_path(query, params: variable_params(query)), target: "_blank", "aria-label": "View query: #{query.friendly_name}" %></h4>
    <div id="chart-<%= i %>" class="chart" role="region" aria-label="<%= query.friendly_name %> results">
      <div class="text-center py-4" role="status" aria-live="polite">
        <span class="spinner"></span>
        <span class="text-muted">Loading...</span>
      </div>
    </div>
  </div>
  <script>
    <% data = {statement: query.statement, query_id: query.id, data_source: query.data_source, variables: variable_params(query), only_chart: true} %>
    <% data.merge!(cohort_period: params[:cohort_period]) if params[:cohort_period] %>
    <%= blazer_js_var "data", data %>

    runQuery(data, function (data) {
      $("#chart-<%= i %>").html(data)
      $("#chart-<%= i %> table").stupidtable(stupidtableCustomSettings)
    }, function (message) {
      $("#chart-<%= i %>").addClass("query-error").html(message)
    });
  </script>
<% end %>
